<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- CONTAINER STYLE-->
    <style name="AppTheme.Container" parent="@style/Widget.AppCompat.Button.Borderless.Colored" >

    </style>

    <style name="AppTheme.Container.Card" parent="@style/AppTheme.Container" >
        <item name="android:background">@drawable/background_container_card</item>
    </style>

    <!-- BUTTON STYLE -->
    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless.Colored" >

    </style>

    <style name="Button.Main">
        <item name="android:layout_height">54dp</item>
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingLeft">18dp</item>
    </style>

    <style name="Button.Dialog">
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_width">347dp</item>
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="Button.Borderless">
        <item name="android:layout_height">54dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingLeft">18dp</item>
    </style>

    <!-- TEXT STYLE -->
    <style name="Text" parent="@style/TextAppearance.AppCompat" >
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Header" >
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="Text.Header.White" >
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="AppTheme.Text">

    </style>
    <style name="AppTheme.Text.Title">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AppTheme.Text.Label">
        <item name="android:textColor">@color/textSemiGray</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.Text.Value">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="Form" >

    </style>

    <style name="FormLabel" >
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="FormField" >
        <item name="android:layout_height">54dp</item>
        <item name="android:background">@drawable/background_form_field</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>
</resources>
